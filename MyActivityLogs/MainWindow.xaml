        mc:Ignorable="d"
        Title="My Activities" 
        Height="720" 
        Width="1280" 
        MinHeight="480"
        MinWidth="720"
        WindowStyle="SingleBorderWindow"
        Background="White">
    <Grid Margin="10">
        <Frame x:Name="MyFrame" Margin="210,10,0,0" NavigationUIVisibility="Hidden"/>


